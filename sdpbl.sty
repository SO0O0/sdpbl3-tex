%  Title
\def\jtitle#1{
	\vspace{2mm}
    {\bf {\Large {#1}}\\
    }\bigskip
}

\def\2jtitle#1#2{
	\vspace{2mm}
    {\bf {\Large {#1}}\\
	\smallskip ――{#2}――}\\ \bigskip
}

\def\etitle#1{
	\footnotetext{{\small
	#1
	}}
}


%----------------------------------------------------------------
%  Name
%----------------------------------------------------------------

\newenvironment{authors}{\Large}{\vspace{2mm}}


\newenvironment{eauthors}{\small}{\vspace{2mm}}


\def\name#1#2{
\ifnum#1=1
	#2$^\dag$
\else
	\ifnum#1=2
	#2$^{\dag\dag}$
	\else
		\ifnum#1=3
		#2 $^\ddag$
		\else
			\ifnum#1=4
			#2$^{\ddag\ddag}$
			\else
				\ifnum#1=13
				#2$^{\dag\ddag}$
				\else
				#2 $^{\dag\ddag\ddag}$
				\fi
			\fi
		\fi
	\fi
\fi
}



%-----------------------------------------------------------
% author (e)
%-----------------------------------------------------------

\def\ename#1#2{
	\footnotetext[#1]{
	\hspace{3mm}#2
	}
}


%-----------------------------------------------------------

\def\eaff#1#2{
\ifnum#1=1%
  \footnotetext{{\scriptsize #2 (\dag)}}
\else
	\ifnum#1=2%
	  \footnotetext{{\scriptsize #2 (\dag\dag)}}
	\else
		\ifnum#1=3%
		  \footnotetext{{\scriptsize #2 (\ddag)}}
		\else
		  \footnotetext{{\scriptsize #2 (\ddag\ddag)}}
		\fi
	\fi
\fi
}

%-----------------------------------------------------------

\def\addr#1{
	\footnotetext{#1}
}




